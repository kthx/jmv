doctype
html(ng-app="myJmv")
  head
    meta(charset='utf8')
    base(href='/')
    title= title
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/prettify.css')
    link(rel='stylesheet', href='/css/style.css')
    
  body
    .navbar.navbar-inverse
        .container
            .navbar-header
                .navbar-brand.active JMV
            .collapse.navbar-collapse(ng-controller="HeaderCtrl")
                ul.nav.navbar-nav
                    li( ng-class="{ active: isActive('/')}")
                        a(href='/') Upload Java source-code
                    li( ng-class="{ active: isActive('/results')}", class="{{disableIfNoLatestResult()}}")
                        a(href='/results/{{resultPath()}}') Latest results
                    li( ng-class="{ active: isActive('/config')}")
                        a(href='/config') Configuration
                    li( ng-class="{ active: isActive('/about')}")
                        a(href='/about') About

    .container
      block content
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js')
    script(src='js/bootstrap.min.js')

    script(src='js/lib/angular/angular.js')
    script(src='js/lib/angular-route/angular-route.min.js')


    script(src='js/lib/angular/angular-file-upload.js')
    script(src='js/lib/angular/angular-ui.bootstrap.js')
    script(src='js/lib/angular-sanitize/angular-sanitize.min.js')

    script(src='js/lib/tv4/tv4.js')
    script(src='js/lib/objectpath/lib/ObjectPath.js')
    script(src='js/lib/angular-schema-form/dist/schema-form.min.js')
    script(src='js/lib/angular-schema-form/dist/bootstrap-decorator.min.js')
    script(src='js/app.js')
    script(src='js/services.js')
    script(src='js/controllers.js')
    script(src='js/filters.js')
    script(src='js/directives.js')
    script(src='js/prettify.js')